{
  "compilerOptions": {
    "module": "commonjs",
    // "lib": ["es2016", "dom"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "incremental": true, 
    "pretty": true,
    "paths": {
      "@cpe": ["./src/cpe/"],
      "@certificados": ["./src/cpe/certificados/"],
      "@comun": ["./src/cpe/comun/"],
      "@estandarUBL": ["./src/cpe/estandarUBL/"],
      "@estructuras": ["./src/cpe/estructuras/"],
      "@firmado": ["./src/cpe/firmado/"],
      "@prefix": ["./src/cpe/prefix/"],
      "@xml": ["./src/cpe/xml/"],
      /****/
      "@config": ["./src/config/config.service.ts"],
    },
    "rootDirs": [
      "src/cpe", 
      "src/cpe/comun", 
      "src/cpe/estandarUBL",
      "src/cpe/estructuras",
      "src/cpe/firmado",
      "src/cpe/xml",    
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
